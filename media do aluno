aluno ={}
aluno['nome'] = input(" Escreva seu nome: ")
aluno['media'] = float(input(f"A media do {aluno['nome']}: "))



    
if aluno['media'] >= 7:
    aluno['situação'] = 'aprovado'
elif 4<= aluno['media'] <7:
    aluno['situação'] = 'recuperação'
else:
    aluno['situação'] ="reprovado"

for k, v in aluno.items():
    print (f'-> {k} igual a {v}')
